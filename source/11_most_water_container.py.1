def container(arr):
    i = 0
    j = len(arr) - 1
    max_contain = 0
    while i < j:
        if arr[i] < arr[j]:
            contain = arr[i] * (j-i)
            i += 1
        else:
            contain = arr[j] * (j-i)
            j -= 1

        max_contain = max(contain,max_contain)

    return max_contain
        
